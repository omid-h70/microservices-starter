    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Api Gateway",
            "type": "go",
            "request": "launch",
            "mode": "auto",//or set specifically debug in some cases
            "program": "${workspaceFolder}/services/api-gateway/",
            "env" :{
                "RABBITMQ_URI" :"amqp://guest:guest@127.0.0.1:5672",
                "HTTP_ADDR" :"127.0.0.1:8881",
            }
        },
        {
            "name": "Debug Driver Service",
            "type": "go",
            "request": "launch",
            "mode": "auto",//or set specifically debug in some cases
            "program": "${workspaceFolder}/services/driver-service/",
            "env" :{
                "RABBITMQ_URI" :"amqp://guest:guest@127.0.0.1:5672",
                "HTTP_ADDR" :"127.0.0.1:8881",
                "GRPC_ADDR" :"127.0.0.1:9991",
            }
        },
    ]
}